{
  "name": "significant-other",
  "displayName": "Significant Other",
  "description": "Quickly switch between a source file and its corresponding test file",
  "publisher": "jasonrudolph",
  "version": "0.2.0",
  "engines": {
    "vscode": "^1.64.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jasonrudolph/significant-other-vscode.git"
  },
  "categories": [
    "Other",
    "Testing"
  ],
  "keywords": [
    "spec",
    "tdd",
    "test",
    "testing"
  ],
  "icon": "images/icon.png",
  "activationEvents": [
    "onCommand:significant-other.toggle"
  ],
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "significant-other.toggle",
        "title": "Significant Other: Toggle",
        "when": "editorTextFocus"
      }
    ],
    "configuration": [
      {
        "title": "Significant Other",
        "properties": {
          "significantOther.mappings": {
            "description": "Path mappings",
            "type": "array",
            "scope": "language-overridable",
            "default": [
              {
                "source": "lib/:dirs+/:stem.js",
                "test": "spec/:dirs+/:stem.js"
              },
              {
                "source": ":dirs+/:stem.js",
                "test": ":dirs+/:stem_spec.js"
              },
              {
                "source": "lib/:dirs+/:stem.js",
                "test": "test/:dirs+/:stem.test.js"
              },
              {
                "source": ":dirs+/:stem.py",
                "test": "tests/:dirs+/test_:stem.py"
              },
              {
                "source": ":dirs+/:stem.js",
                "test": ":dirs+/:stem-spec.js"
              },
              {
                "source": ":dirs+/:stem.go",
                "test": ":dirs+/:stem_test.go"
              },
              {
                "source": "/app/:dirs+/:stem.rb",
                "test": "/test/:dirs+/:stem_test.rb"
              }
            ]
          }
        }
      }
    ]
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "node ./test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.0.0",
    "@types/node": "14.x",
    "@types/vscode": "^1.63.0",
    "@vscode/test-electron": "^2.0.3",
    "eslint": "^8.6.0",
    "eslint-config-prettier": "^8.3.0",
    "glob": "^7.2.0",
    "mocha": "^9.1.3",
    "rimraf": "^3.0.2",
    "typescript": "^4.5.4"
  },
  "dependencies": {
    "path-to-regexp": "^6.2.0"
  }
}
